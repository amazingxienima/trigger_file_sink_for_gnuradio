<?xml version="1.0"?>
<block>
  <name>Multi File Sink Trigger</name>
  <key>myblk_multi_file_sink_trigger</key>
  <category>[myblk]</category>
  <import>import myblk</import>
  <make>myblk.multi_file_sink_trigger($filedir0, $filedir1, $trigger, $threshold)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
    <param>
      <name>FILEDIR0</name>
      <key>filedir0</key>
      <type>file_save</type>
    </param>
    <param>
      <name>FILEDIR1</name>
      <key>filedir1</key>
      <type>file_save</type>
    </param>
    <param>
      <name>TRIGGER</name>
      <key>trigger</key>
      <type>float</type>
    </param>
    <param>
      <name>THRESHOLD</name>
      <key>threshold</key>
      <type>int</type>
    </param>


  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>
  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->

</block>
